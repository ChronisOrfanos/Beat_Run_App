<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#242424"
    android:orientation="vertical"
    android:weightSum="13"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:layout_weight="3.3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="237dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="232dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/logo" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="179dp"
                android:gravity="right|center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_ui_grad_start" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:weightSum="8"
        android:orientation="vertical"
        android:layout_weight="9.8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="bottom"
            android:layout_weight="1.5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="37dp"
                android:fontFamily="@font/roboto_black_start"
                android:text="Login"
                android:textColor="#ffffff"
                android:textSize="30sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="0.82">

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/edit_txt_1_start"
                android:fontFamily="@font/roboto_light_start"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingLeft="20dp"
                android:textColorHint="#DADADA" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="0.82">
            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/edit_txt_1_start"
                android:fontFamily="@font/roboto_light_start"
                android:hint="Phone Number (optional)"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:textColorHint="#DADADA" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="0.82">
            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/edit_txt_1_start"
                android:fontFamily="@font/roboto_light_start"
                android:hint="Name"
                android:inputType="textPersonName"
                android:paddingLeft="20dp"
                android:textColorHint="#DADADA" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="0.82">
            <EditText
                android:id="@+id/age"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/edit_txt_1_start"
                android:fontFamily="@font/roboto_light_start"
                android:hint="Age"
                android:inputType="textShortMessage"
                android:paddingLeft="20dp"
                android:textColorHint="#DADADA" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="0.82">
            <EditText
                android:id="@+id/weigh"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/edit_txt_1_start"
                android:fontFamily="@font/roboto_light_start"
                android:hint="Weight"
                android:inputType="textShortMessage"
                android:paddingLeft="20dp"
                android:textColorHint="#DADADA" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="0.82">
            <EditText
                android:id="@+id/w_runs"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/edit_txt_1_start"
                android:fontFamily="@font/roboto_light_start"
                android:hint="Usual week runs"
                android:inputType="textShortMessage"
                android:paddingLeft="20dp"
                android:textColorHint="#DADADA" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="0.82">
            <EditText
                android:id="@+id/tests"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/edit_txt_1_start"
                android:fontFamily="@font/roboto_light_start"
                android:hint="Test1/Test_2/..."
                android:inputType="textShortMessage"
                android:paddingLeft="20dp"
                android:textColorHint="#DADADA" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="0.4">
            <Button
                android:id="@+id/loginBtn"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:background="@drawable/ic_rectangle_grad_start"
                android:fontFamily="@font/roboto_medium_start"
                android:text="Register"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="16sp" />





        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="115dp"
            android:layout_weight="0">


            <CheckBox
                android:id="@+id/rememberMe"
                android:layout_width="160dp"
                android:layout_height="20dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="0dp"
                android:text="Remember me"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_gravity="center"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/loginBtn" />




        </LinearLayout>
    </LinearLayout>






</LinearLayout>